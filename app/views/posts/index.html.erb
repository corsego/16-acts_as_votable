<h1>Posts</h1>

<%= link_to 'New Post', new_post_path %>

<br>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Content</th>
      <th>Upvote</th>
      <th>Downvote</th>
      <th>Cached score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= simple_format(post.content) %></td>
        <td><%= render "posts/upvote_link", post: post %></td>
        <td><%= render "posts/downvote_link", post: post %></td>
        <td><%= render "posts/votes_score", post: post %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
